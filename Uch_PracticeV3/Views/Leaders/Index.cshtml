@using Uch_PracticeV3.Models
@model List<Leader>

<div class="row justify-content-between">
    <div class="col-md-4 col-sm-6">
        <h2 class="text-primary my-4">Таблица руководителей:</h2>
    </div>
    <div class="col-md-4 col-sm-6 d-flex flex-column justify-content-around">
        <div class="row align-items-center">
            <button id="Create-button" class="col-lg mx-2 btn btn-success">Добавить</button>
            <button id="Update-button" class="col-lg mx-2 btn btn-warning" disabled="@(Model.Count==0)">Изменить</button>
            <button id="Delete-button" class="col-lg mx-2 btn btn-danger" disabled="@(Model.Count==0)">Удалить</button>
        </div>
    </div>
</div>
@if (Model.Count == 0)
{
    <h4 class="text-primary my-4">Таблица пустая. Однако вы по-прежнему можете добавить данные!</h4>
}
else
{
    <table class="table" id="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Код</th>
                <th scope="col">Фамилия</th>
                <th scope="col">Имя</th>
                <th scope="col">Отчество</th>
                <th scope="col">Должность</th>
                <th scope="col">Студенты</th>
                <th scope="col">Email</th>
                <th scope="col">Телефон</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Leader leader in Model)
            {
                <tr>
                    <th scope="row">@leader.Id</th>
                    <td>@leader.Surname</td>
                    <td>@leader.Name</td>
                    <td>@leader.Patronymic</td>
                    <td>@leader.Rank.Naming</td>
                    <td>
                        @if (leader.Students.Count == 0)
                        {
                            <span>Пусто...</span>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle btn-info" type="button" id="dropdownMenuButton"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @leader.Students.First().Surname
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @foreach (Student student in leader.Students)
                                    {
                                        <span class="dropdown-item">@student.Surname</span>
                                    }
                                </div>
                            </div>
                        }
                    </td>
                    <td>@leader.Email</td>
                    <td>@leader.Phone</td>
                </tr>
            }
        </tbody>
    </table>
    Html.RenderPartial("Pagination");
}
@{Html.RenderPartial("ButtonsScript");}