@using Uch_PracticeV3.Models
@model Rank

    <form action="/Admin/Ranks/@ViewBag.Action" method="post" class="my-3">
        @Html.AntiForgeryToken()
        <div class="form-group">
            @if (ViewBag.Action == "edit")
            {
                <input hidden class="form-control" name="Id" value="@Model.Id" />
            }
            else
            {
                <label for="Id">Код</label>
                if (ViewBag.Errors != null)
                {
                    <input type="number" required name="Id" class="form-control"  value="@Model.Id" />
                }
                else
                {
                    <input type="number" required name="Id" class="form-control" />
                }
            }
        </div>
        <div class="form-group">
            <label for="Naming">Название</label>
            @if (ViewBag.Action == "edit" || ViewBag.Errors != null)
            {
                <input name="Naming" required maxlength="30" type="text" class="form-control" id="Naming"
                       value="@Model.Naming">
            }
            else
            {
                <input name="Naming" required maxlength="30" type="text" class="form-control" id="Naming">
            }
        </div>
        <button type="submit" class="btn btn-primary">@(ViewBag.Action == "edit"?"Изменить":"Добавить")</button>
    </form>