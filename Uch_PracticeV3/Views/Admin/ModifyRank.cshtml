@using Uch_PracticeV3.Models
@model Rank
@{
    ViewBag.Title = ViewBag.Action;
}

    <form action="/Admin/Ranks/@ViewBag.Action" method="post">
        <div class="form-group">
            <label for="Id">Код</label>
            @if (ViewBag.Action == "edit")
            {
                <input hidden class="form-control" name="Id" value="@ViewBag.Rank.Id" />
            }
            else
            {
                <input type="number" name="Id" class="form-control" />
            }
        </div>
        <div class="form-group">
            <label for="Naming">Название</label>
            @if (ViewBag.Action == "edit")
            {
                <input name="Naming" type="text" class="form-control" id="Naming"
                        value="@ViewBag.Rank.Naming">
            }
            else
            {
                <input name="Naming" type="text" class="form-control" id="Naming">
            }
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
</form>