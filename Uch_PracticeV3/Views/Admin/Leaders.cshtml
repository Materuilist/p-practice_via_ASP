@using Uch_PracticeV3.Models
@model List<Leader>
@{
    ViewBag.Title = "Leaders";
}

<div class="row justify-content-between">
    <div class="col-md-4 col-sm-6">
        <h2 class="text-primary my-4">Таблица руководителей:</h2>
    </div>
    <div class="col-md-4 col-sm-6 d-flex flex-column justify-content-around">
        <div class="row align-items-center">
            <button id="add-button" class="col-lg mx-2 btn btn-success">Добавить</button>
            <button id="edit-button" class="col-lg mx-2 btn btn-warning">Изменить</button>
            <button id="delete-button" class="col-lg mx-2 btn btn-danger">Удалить</button>
        </div>
    </div>
</div>
<table class="table" id="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Код</th>
            <th scope="col">Фамилия</th>
            <th scope="col">Имя</th>
            <th scope="col">Отчество</th>
            <th scope="col">Должность</th>
            <th scope="col">Студенты</th>
            <th scope="col">Email</th>
            <th scope="col">Телефон</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Leader leader in Model)
        {
        <tr>
            <th scope="row">@leader.Id</th>
            <td>@leader.Surname</td>
            <td>@leader.Name</td>
            <td>@leader.Patronymic</td>
            <td>@leader.Rank.Naming</td>
            <td>
                @if (leader.Students.Count == 0)
                {
                    <span>Пусто...</span>
                }
                else
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle btn-info" type="button" id="dropdownMenuButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @leader.Students.First().Surname
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (Student student in leader.Students)
                            {
                                <span class="dropdown-item">@student.Surname</span>
                            }
                        </div>
                    </div>
                }
            </td>
            <td>@leader.Email</td>
            <td>@leader.Phone</td>
        </tr>
        }
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (ViewBag.PageIndex != 1)
        {
            <li class="page-item">
                <a class="page-link" href="Leaders?page=@(@ViewBag.PageIndex - 1)" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
        }

        @if (ViewBag.PageIndex != 1)
        {
            <li class="page-item"><a class="page-link" href="Leaders?page=1">1</a></li>
        }

        <li class="page-item active"><a class="page-link" href="Leaders?page=@ViewBag.PageIndex">@ViewBag.PageIndex</a></li>

        @if (ViewBag.NextPageExists)
        {
            <li class="page-item"><a class="page-link" href="Leaders?page=@(@ViewBag.PageIndex + 1)">@(@ViewBag.PageIndex + 1)</a></li>
            <li class="page-item">
                <a class="page-link" href="Leaders?page=@(@ViewBag.PageIndex + 1)" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }
    </ul>
</nav>

<script>
    const addButtonClickListener = (action = 'edit') => {
        $(`#${action}-button`).on('click', () => {
            if ($('table').children('tbody').first().children('tr').hasClass('selectable')){
                return;
            }
            $('#table').children('tbody').first().children('tr').addClass('selectable').on('click', event => {
                const id = event.target.closest('tr').firstElementChild.textContent;
                window.location.assign(`/Admin/Leaders?action=${action}&rowId=${id}`);
            });
        });
    };
    $('#add-button').on('click', () => window.location.assign('/Admin/Leaders?action=add'));
    addButtonClickListener('edit');
    addButtonClickListener('delete');
</script>