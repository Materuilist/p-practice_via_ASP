@using Uch_PracticeV3.OfficeInteraction
@model EnterParams

@if (ViewBag.isResultEmpty != null)
{
    <h2>Запрос не дал результатов!</h2>
}
else
{
    <h2 class="text-primary my-4 text-center">@ViewBag.Title:</h2>
    <table class="table" id="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Студент</th>
                <th scope="col">Руководитель</th>
                <th scope="col">Группа</th>
                <th scope="col">Работа</th>
                <th scope="col">Оценка</th>
            </tr>
        </thead>
        <tbody>
            @foreach (List<string> row in Model.rows)
            {
            <tr>
                <th scope="row">@row[0]</th>
                <td>@row[1]</td>
                <td>@row[2]</td>
                @if (@row[4] != null)
                {
                    if (@row[3] != null)
                    {
                        <td><a href="@row[4]" download="@(@row[3]+".docx")">@row[3]</a></td>
                    }
                    else
                    {
                        <td><a href="@row[4]" download="@(@row[0]+".docx")">@row[0]</a></td>
                    }
                }
                else
                {
                    <td>Пусто</td>
                }
                <td>@row[5]</td>
            </tr>
            }
        </tbody>
    </table>
}